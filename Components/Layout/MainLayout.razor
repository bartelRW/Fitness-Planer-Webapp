@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar shadow-lg brand-sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="brand-border"></div>
        <div class="top-row px-4 @ChangeTopRow">
            <ThemeSwitcher OnThemeChanged="OnThemeChanged" Position="DropdownMenuPosition.End" />
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    Es ist ein Fehler ist aufgetreten
    <a href="." class="reload">Aktualisieren</a>
    <span class="dismiss">🗙</span>
</div>

@code{
    private string ChangeTopRow { get; set; } = string.Empty;

    private void OnThemeChanged(string themeName)
    {
        if(themeName == "dark")
        {
            ChangeTopRow = "bg-dark";
        }
        else
        {
            ChangeTopRow = "";
        }
    }
}