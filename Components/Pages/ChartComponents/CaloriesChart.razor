<!-- General Chart-Component to load individual charts -->
<ChartComponent CanvasId="CaloriesChart" ChartConfig="@ChartConfig" />

@code {
    //Get Data from main component
    [CascadingParameter(Name = "CaloriesPoints")]
    private List<ChartPoint>? CaloriesPoints { get; set; } = new();

    private object? ChartConfig { get; set; }

    // Create Chart Config
    protected override void OnInitialized()
    {
        if (CaloriesPoints is not null && CaloriesPoints.Count > 0)
        {
            // Generate labels based on current time for each data point
            var labels = CaloriesPoints.Select(cp => cp.Date.ToString("dd.MM")).ToList();
            var calories = CaloriesPoints.Select(cp => cp.Value).ToList();
            var nutritionGoalCals = CaloriesPoints.Select(cp => cp.NutritionGoal).ToList();

            ChartConfig = new
            {
                data = new
                {
                    labels = labels,
                    datasets = new object[]
                    {
                        new {
                             type = "bar",
                            label = "Kalorien",
                            data = calories,
                            backgroundColor = "rgba(255, 209, 102, 0.6)",
                            borderColor =  "#a2d208",
                        },
                        new {
                            type = "line",
                            label = "Kalorienziel",
                            data = nutritionGoalCals,
                            backgroundColor = "rgba(255, 0, 0, 0.6)",
                            borderColor = "rgba(255, 0, 0, 0.6)",
                        },
                    }
                },
                options = new
                {
                    responsive = true,
                    maintainAspectRatio = false,
                    animation = false,

                    plugins = new
                    {
                        legend = new
                        {
                            display = false,
                        },
                    },

                    scales = new
                    {
                        x = new
                        {
                            grid = new
                            {
                                display = true,
                            },
                        },
                        y = new
                        {
                            beginAtZero = true,
                            title = new
                            {
                                padding = 0,
                                display = true,
                            }
                        }
                    },

                    Interaction = new
                    {
                        mode = "index",
                        axis = "x",
                        intersect = false,
                    },

                    hover = new
                    {
                        mode = "index",
                        intersect = false,
                    }
                }
            };
        }
    }
}